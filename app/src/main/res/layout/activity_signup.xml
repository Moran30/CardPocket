<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cardpocket.cardpocket.signup"
    android:background="@drawable/low_wallpaper"
    android:id="@+id/base">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/tv_signup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your email address and password in the fields below."
        android:id="@+id/tv_details"
        android:layout_below="@+id/tv_signup"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:paddingLeft="32dp"
        android:textIsSelectable="true"
        android:textStyle="normal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/tf_email"
        android:layout_below="@+id/tv_details"
        android:layout_marginTop="94dp"
        android:layout_alignLeft="@+id/tv_details"
        android:layout_alignStart="@+id/tv_details"
        android:layout_alignRight="@+id/tv_details"
        android:layout_alignEnd="@+id/tv_details"
        android:text="Email address"
        android:textColor="#ffffffff"
        android:paddingLeft="10dp"
        android:onClick="onClick"
        android:selectAllOnFocus="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Confirm your password"
        android:id="@+id/tv_confirm"
        android:layout_below="@+id/tf_password"
        android:layout_alignLeft="@+id/tf_password"
        android:layout_alignStart="@+id/tf_password"
        android:layout_alignRight="@+id/tf_email"
        android:layout_alignEnd="@+id/tf_email"
        android:paddingTop="20dp"
        android:textColor="#FFFFFFFF"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tf_password"
        android:text="Password"
        android:layout_below="@+id/tv_password"
        android:layout_alignLeft="@+id/tv_password"
        android:layout_alignStart="@+id/tv_password"
        android:layout_alignRight="@+id/tv_password"
        android:layout_alignEnd="@+id/tv_password"
        android:textColor="#ffffffff"
        android:paddingLeft="10dp"
        android:onClick="onClick"
        android:selectAllOnFocus="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tf_confirm"
        android:text="password"
        android:layout_below="@+id/tv_confirm"
        android:layout_alignLeft="@+id/tv_confirm"
        android:layout_alignStart="@+id/tv_confirm"
        android:layout_alignRight="@+id/tv_confirm"
        android:layout_alignEnd="@+id/tv_confirm"
        android:textColor="#ffffffff"
        android:paddingLeft="10dp"
        android:onClick="onClick"
        android:selectAllOnFocus="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Your password"
        android:id="@+id/tv_password"
        android:layout_alignLeft="@+id/tf_email"
        android:layout_alignStart="@+id/tf_email"
        android:layout_below="@+id/tf_email"
        android:layout_alignRight="@+id/tf_email"
        android:layout_alignEnd="@+id/tf_email"
        android:paddingTop="20dp"
        android:textColor="#FFFFFFFF"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/bttn_signup"
        android:onClick="onClick"
        android:background="#F9F9F9"
        android:textColor="#096BC1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tv_signup"
        android:layout_toStartOf="@+id/tv_signup"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to login"
        android:id="@+id/bttn_return"
        android:onClick="onClick"
        android:background="#F9F9F9"
        android:textColor="#096BC1"
        android:layout_alignTop="@+id/bttn_signup"
        android:layout_toRightOf="@+id/tv_signup"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
