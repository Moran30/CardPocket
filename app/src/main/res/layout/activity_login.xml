<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".login"
    android:id="@+id/base"
    android:background="#ff000000">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome To Card Pocket"
        android:id="@+id/tv_welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textSize="22dp"
        android:textIsSelectable="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_logo"
        android:src="@drawable/logo"
        android:layout_below="@+id/tv_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/tv_email"
        android:text="Email Address"
        android:textColor="#ff000000"
        android:textSize="23dp"
        android:background="#ffffffff"
        android:textStyle="normal"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tv_password"
        android:layout_below="@+id/tv_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Password"
        android:background="#ffffffff"
        android:textColor="#ff000000"
        android:textSize="23dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/bttn_login"
        android:background="#ffffffff"
        android:clickable="false"
        android:textColor="#ff000000"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/iv_logo"
        android:layout_toStartOf="@+id/iv_logo"
        android:layout_marginBottom="33dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/bttn_signup"
        android:background="#ffffffff"
        android:textColor="#ff000000"
        android:layout_weight="1"
        android:layout_alignTop="@+id/bttn_login"
        android:layout_toRightOf="@+id/iv_logo"
        android:layout_toEndOf="@+id/iv_logo" />

</RelativeLayout>

