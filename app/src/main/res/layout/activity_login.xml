<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".login"
    android:id="@+id/base"
    android:background="#096BC1">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_logo"
        android:src="@drawable/smile"
        android:layout_marginTop="36dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/bttn_signin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#096BC1"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:paddingLeft="60dp"
        android:onClick="onClick"
        android:clickable="true"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/bttn_signup"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#096BC1"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:paddingRight="60dp"
        android:onClick="onClick"
        android:clickable="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New to cardpocket ? Click on the Sign up button."
        android:id="@+id/tv_clickon"
        android:textSize="14sp"
        android:textColor="#ffffffff"
        android:layout_above="@+id/tf_email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textStyle="italic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/tf_email"
        android:text="Email Address"
        android:onClick="onClick"
        android:textColor="#ff4f4f4f"
        android:textSize="17sp"
        android:layout_above="@+id/tf_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/textbox"
        android:textAlignment="center"
        android:paddingLeft="12dp"
        android:paddingBottom="1dp"
        android:focusable="true"
        android:selectAllOnFocus="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tf_password"
        android:text="Password"
        android:onClick="onClick"
        android:textColor="#ff4f4f4f"
        android:textSize="17sp"
        android:layout_above="@+id/bttn_signin"
        android:layout_alignLeft="@+id/tf_email"
        android:layout_alignStart="@+id/tf_email"
        android:background="@drawable/textbox"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        android:paddingLeft="12dp"
        android:paddingBottom="1dp"
        android:focusable="true"
        android:selectAllOnFocus="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Forgotten Your Password?"
        android:id="@+id/tv_forgot"
        android:textSize="14sp"
        android:layout_above="@+id/bttn_signin"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_marginBottom="10dp" />


</RelativeLayout>

