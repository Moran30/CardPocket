<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cardpocket.cardpocket.forgottenpassword"
    android:background="@drawable/login_wallpaper">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgotten Your Password?"
        android:id="@+id/tv_forgot"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:password="false"
        android:textColor="#ffffffff"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Don&apos;t worry about it, you&apos;re only human. Simply enter your email address and click the show password button."
        android:id="@+id/tv_ok"
        android:layout_below="@+id/tv_forgot"
        android:textColor="#ffffffff"
        android:layout_alignLeft="@+id/tv_forgot"
        android:layout_alignStart="@+id/tv_forgot"
        android:layout_alignRight="@+id/tv_forgot"
        android:layout_alignEnd="@+id/tv_forgot"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/tf_emailaddress"
        android:layout_below="@+id/tv_ok"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/textbox"
        android:paddingLeft="12dp"
        android:textAlignment="center"
        android:textColor="#ff4f4f4f"
        android:textSize="17sp"
        android:paddingBottom="1dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Password"
        android:id="@+id/bttn_showpassword"
        android:layout_below="@+id/tf_emailaddress"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:background="#096BC1"
        android:layout_marginTop="20dp"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Password Is :"
        android:id="@+id/tv_yourpass"
        android:layout_below="@+id/bttn_showpassword"
        android:layout_centerHorizontal="true"
        android:textColor="#096BC1"
        android:layout_marginTop="65dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_userspassword"
        android:layout_below="@+id/tv_yourpass"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:textColor="#096BC1" />
</RelativeLayout>
